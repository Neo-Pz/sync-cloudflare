{
	"name": "tldraw-sync-cloudflare",
	"private": true,
	"version": "0.0.0",
	"author": {
		"name": "tldraw GB Ltd.",
		"email": "hello@tldraw.com"
	},
	"homepage": "https://tldraw.dev",
	"license": "MIT",
	"type": "module",
	"tldraw_template": {
		"repo": "tldraw/tldraw-sync-cloudflare",
		"scripts": {
			"lint": null
		}
	},
	"scripts": {
		"dev": "node scripts/start-dev.cjs",
		"dev:concurrent": "node scripts/dev-banner.js && concurrently --kill-others-on-fail --prefix-colors \"cyan,magenta\" --names \"CLIENT,WORKER\" \"npm run dev:client\" \"npm run dev:worker\"",
		"dev:client": "vite --host --mode spa",
		"dev:worker": "wrangler dev --local --port 8787",
		"dev:db": "echo '🗄️ 数据库已配置，使用本地D1实例' && echo '✅ 数据库服务持续运行中...' && node -e \"setInterval(() => {}, 1000)\"",
		"dev:setup": "concurrently \"yarn dev:db:init\" \"yarn dev:db:migrate\"",
		"dev:db:init": "wrangler d1 execute tldraw-db --local --file=./schema.sql",
		"dev:db:migrate": "wrangler d1 execute tldraw-db --local --file=./schema-updates.sql",
		"dev:no-proxy": "cross-env HTTP_PROXY= HTTPS_PROXY= NO_PROXY=* vite",
		"build": "vite build",
		"build:sync": "npm run build && node update-assets.js",
		"lint": "yarn run -T tsx ../../internal/scripts/lint.ts",
		"preview": "vite preview",
		"deploy:prod": "npm run build:sync && wrangler deploy",
		"sync:prod": "yarn deploy:prod",
		"verify:prod": "echo '🌐 请手动验证: https://www.iflowone.com/' && echo '👤 管理后台: https://www.iflowone.com/admin'",
		"dev:full-cycle": "yarn dev:setup && yarn build && yarn deploy:prod && yarn verify:prod",
		"sync:check": "node scripts/sync-check.js",
		"dev:simple": "node scripts/dev-banner.js && echo '🚀 请在两个终端中分别运行:' && echo '  终端1: npm run dev:client' && echo '  终端2: npm run dev:worker'"
	},
	"dependencies": {
		"@clerk/clerk-react": "^5.35.0",
		"@tldraw/sync": "^3.15.1",
		"@tldraw/sync-core": "^3.15.1",
		"@tldraw/tlschema": "^3.15.1",
		"cloudflare-workers-unfurl": "^0.0.7",
		"itty-router": "^5.0.18",
		"lodash.throttle": "^4.1.1",
		"nanoid": "^5.0.8",
		"react": "^18.3.1",
		"react-dom": "^18.3.1",
		"tldraw": "^3.15.1"
	},
	"devDependencies": {
		"@cloudflare/vite-plugin": "^1.9.0",
		"@types/lodash.throttle": "^4.1.9",
		"@types/react": "^18.3.18",
		"@types/react-dom": "^18.3.5",
		"@vitejs/plugin-react-swc": "^3.10.2",
		"concurrently": "^9.1.2",
		"typescript": "^5.8.3",
		"vite": "^7.0.1",
		"wrangler": "^4.23.0"
	}
}
